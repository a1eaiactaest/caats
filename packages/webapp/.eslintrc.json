{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/jsx-runtime",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended",
    "plugin:tailwindcss/recommended"
  ],
  "overrides": [
    {
      "files": [
        "./*.cjs",
        "./vite.config.ts"
      ],
      "env": {
        "node": true,
        "commonjs": true
      }
    }
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": [
    "react",
    "@typescript-eslint",
    "tailwindcss",
    "prettier"
  ],
  "rules": {
    "prettier/prettier": "warn",
    "tailwindcss/no-custom-classname": "off"
  },
  "ignorePatterns": [
    "src/gql/*.ts"
  ]
}